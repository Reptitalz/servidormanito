/**
 * @file Firestore Security Rules
 * @description
 * Enforces a strict user-ownership model for user-specific data
 * and allows public read access to subscription plans.
 *
 * Data Structure:
 * - /users/{userId}: User profiles (owner-only)
 * - /plans/{planId}: Public subscription plans
 * - /users/{userId}/subscriptions/{subscriptionId}: User subscriptions (owner-only)
 * - /users/{userId}/assistants/{assistantId}: User assistants (owner-only)
 * - /users/{userId}/clients/{clientId}: User clients (owner-only)
 * - /users/{userId}/transactions/{transactionId}: User transactions (owner-only)
 *
 * Key Rules:
 * - Path-based ownership enforcement.
 * - Admin access granted to reptitalz@heymanito.com.
 * - Listing users is disabled for non-admins.
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Utility functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isAdmin() {
      return request.auth.token.email == "reptitalz@heymanito.com";
    }

    /* =========================
       USERS ROOT DOCUMENTS
       ========================= */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /* =========================
       PUBLIC PLANS
       ========================= */
    match /plans/{planId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if false;
    }

    /* =========================
       USER SUBSCRIPTIONS
       ========================= */
    match /users/{userId}/subscriptions/{subscriptionId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /* =========================
       USER ASSISTANTS
       ========================= */
    match /users/{userId}/assistants/{assistantId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /* =========================
       USER CLIENTS
       ========================= */
    match /users/{userId}/clients/{clientId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /* =========================
       USER TRANSACTIONS (ADDED)
       ========================= */
    match /users/{userId}/transactions/{transactionId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && (!("userId" in request.resource.data) || request.resource.data.userId == request.auth.uid);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /* =========================
       COLLECTION GROUP: ASSISTANTS (ADMIN ONLY)
       ========================= */
    match /{path=**}/assistants/{assistantId} {
      allow get, list: if isAdmin();
    }
  }
}
